<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartAuth.View.CadastrarUsuario"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#EDEDED">
    <ContentPage.Content>
        <StackLayout
            VerticalOptions="CenterAndExpand" 
            HorizontalOptions="CenterAndExpand"
        >
            <Image Source="takePicture.png" HeightRequest="70"></Image>
            
            <Label Text="Olá novato, bem vindo!"
                   HorizontalTextAlignment="Center"
                   TextColor="Black" />
            <Label Text="Ao clicar no botão abaixo você deverá aproximar sua CNH (Carteira Nacional de Habilitação) a câmera, e tirar uma foto para que possamos identifica-lo." 
                   HorizontalTextAlignment="Center"
                   TextColor="Black"
                   WidthRequest="250"/>

            <BoxView HeightRequest="20"/>

            <Button Text="Abrir câmera" 
                    BackgroundColor="OrangeRed" 
                    TextColor="White"
                    HeightRequest="40"
                    CornerRadius="10"
                    Clicked="OpenCamera_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>